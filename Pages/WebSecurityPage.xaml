<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Test.Pages.WebSecurityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="20">

            <!-- HEADER -->
            <TextBlock
                Text="Web Security"
                FontSize="26"
                FontWeight="SemiBold"
                Foreground="White"/>

            <!-- WEBSITE PROTECTION -->
            <Border Background="#1E1E1E"
                    CornerRadius="12"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Website Protection"
                                   FontSize="18"
                                   Foreground="White"/>
                        <TextBlock Text="Blocks malicious and unsafe websites"
                                   Foreground="#AAAAAA"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ToggleSwitch Grid.Column="1"
                                  />
                </Grid>
            </Border>

            <!-- PHISHING PROTECTION -->
            <Border Background="#1E1E1E"
                    CornerRadius="12"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Phishing Protection"
                                   FontSize="18"
                                   Foreground="White"/>
                        <TextBlock Text="Detects fake login pages and scams"
                                   Foreground="#AAAAAA"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ToggleSwitch Grid.Column="1"
                                  />
                </Grid>
            </Border>

            <!-- NSFW FILTER -->
            <Border Background="#1E1E1E"
                    CornerRadius="12"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="NSFW Content Filter"
                                   FontSize="18"
                                   Foreground="White"/>
                        <TextBlock Text="Blocks adult and unsafe web content"
                                   Foreground="#AAAAAA"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ToggleSwitch Grid.Column="1"
                                  />
                </Grid>
            </Border>

            <!-- PASSWORD PROTECTION -->
            <Border Background="#1E1E1E"
                    CornerRadius="12"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Password Protection"
                                   FontSize="18"
                                   Foreground="White"/>
                        <TextBlock Text="Protects saved passwords from leaks"
                                   Foreground="#AAAAAA"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ToggleSwitch Grid.Column="1"
                                />
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
