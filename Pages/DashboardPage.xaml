<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Test.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">

        <!-- DEFINE ROWS FIRST -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0">

            <!-- Split Title + Button -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- TITLE -->
            <TextBlock
                Text="Security Overview"
                FontSize="26"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="0,0,0,0"
                Foreground="White"/>

            <!-- QUICK SCAN BUTTON -->
            <Button
                Content="Quick Scan"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Padding="20,10"
                CornerRadius="10"/>

        </Grid>

        <!-- CONTENT AREA -->
        <Grid Grid.Row="1" Margin="0,20,0,100" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- STATUS CARD -->
            <Border Grid.Column="0"
                    Background="#202020"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,0,12,0">

                <StackPanel>
                    <TextBlock Text="Protection Status"
                               Foreground="#AAAAAA"/>

                    <TextBlock Text="Active"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#44D62C"/>
                </StackPanel>

            </Border>

            <!-- LAST SCAN -->
            <Border Grid.Column="1"
                    Background="#202020"
                    CornerRadius="12"
                    Padding="16"
                    Margin="0,0,12,0">

                <StackPanel>
                    <TextBlock Text="Last Scan"
                               Foreground="#AAAAAA"/>

                    <TextBlock Text="Today, 10:42 AM"
                               FontSize="18"
                               Foreground="White"/>
                </StackPanel>

            </Border>

            <!-- THREATS -->
            <Border Grid.Column="2"
                    Background="#202020"
                    CornerRadius="12"
                    Padding="16">

                <StackPanel>
                    <TextBlock Text="Threats Blocked"
                               Foreground="#AAAAAA"/>

                    <TextBlock Text="12"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"/>
                </StackPanel>

            </Border>

        </Grid>

    </Grid>
</Page>