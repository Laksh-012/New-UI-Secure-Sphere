<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Test.Pages.ProtectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Test.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Padding="24" Spacing="20">

            <!-- HEADER -->
            <TextBlock
                Text="Protection Modules"
                FontSize="26"
                FontWeight="SemiBold"
                Foreground="White"/>

            <!-- VIRUS PROTECTION -->
            <Border Background="#1E1E1E"
                    CornerRadius="12"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Virus Protection"
                                   FontSize="18"
                                   Foreground="White"/>
                        <TextBlock Text="Real-time virus detection and removal"
                                   Foreground="#AAAAAA"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ToggleSwitch Grid.Column="1"
                                  />
                </Grid>
            </Border>

            <!-- RANSOMWARE PROTECTION -->
            <Border Background="#1E1E1E"
                    CornerRadius="12"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Ransomware Protection"
                                   FontSize="18"
                                   Foreground="White"/>
                        <TextBlock Text="Blocks unauthorized file encryption"
                                   Foreground="#AAAAAA"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ToggleSwitch Grid.Column="1"
                                  />
                </Grid>
            </Border>

            <!-- FILE PROTECTION -->
            <Border Background="#1E1E1E"
                    CornerRadius="12"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="File Protection"
                                   FontSize="18"
                                   Foreground="White"/>
                        <TextBlock Text="Protects critical system files"
                                   Foreground="#AAAAAA"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ToggleSwitch Grid.Column="1"/>
                    <!--IsOn="{Binding FileProtectionEnabled}"-->
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
